<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewDefault">
        <item name="cardElevation">@dimen/elevation_card_view</item>
        <item name="cardCornerRadius">@dimen/radius_card_view</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewLarge" parent="TextViewDefault">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewMedium" parent="TextViewDefault">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewSmall" parent="TextViewDefault">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>